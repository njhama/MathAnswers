{
    "manifest_version": 3,
    "name": "Screenshot Extension",
    "version": "1.0",
    "permissions": ["activeTab", "tabs", "storage", "downloads"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"], 
            "js": ["content.js"]
        }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
      
    }
    
  }
  